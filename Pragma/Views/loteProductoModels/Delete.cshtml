@model Pragma.Models.loteProductoModel

@{
    ViewBag.Title = "Delete";
}


<div class="navbar">
    <h2 style="display:inline-block; margin-left:0.5rem;">ELIMINAR REGISTRO DE LOTE</h2>
    <img src="~/img/logo.png" width="50px" height="50px" style="border-radius: 10rem; display: inline-block; float:right; margin-right:0.5rem; margin-top:0.5rem;">
</div>

<div id="contenido">
    @if (@Session["Admin"] == "ok")
    {
        <h3>¿Deseas eliminar este registro de la tabla lote?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.id_loteProducto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.id_loteProducto)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.fecha_caducidad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.fecha_caducidad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stock)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stock)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <button type="submit" value="Delete" style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; font-weight: bold;">
                        <h4 style="font-weight: bold;">Eliminar</h4>
                    </button>
                    &nbsp;
                    &nbsp;
                    <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
                        <h4>@Html.ActionLink("Atras", "Index")</h4>
                    </button>
                </div>
            }
        </div>
    }
    else
    {
        <h1 style="text-align:center;">Usted no puede acceder a esta opción</h1>
        <h1 style="text-align:center;">Esta opcion es exclusiva del administrador</h1>
        <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
            <h4>@Html.ActionLink("Atras", "Index")</h4>
        </button>
    }

</div>

<nav class="navbarF">
    <div class="foot">
        &nbsp;&nbsp;<h3 style="padding-left:1rem">&copy; @DateTime.Now.Year - Gestion de inventarios y ventas Pragma</h3>
    </div>
</nav>
