@model Pragma.Models.Usuario

@{
    ViewBag.Title = "Delete";
}

<div class="navbar">
    <h2 style="display:inline-block; margin-left:0.5rem;">ELIMINAR USUARIO</h2>
    <img src="~/img/logo.png" width="50px" height="50px" style="border-radius: 10rem; display: inline-block; float:right; margin-right:0.5rem; margin-top:0.5rem;">
</div>
<div id="contenido">
    <h3>¿Deseas eliminar este usuario?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.tipo_usuario)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tipo_usuario)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.nombre_usuario)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre_usuario)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.password)
            </dt>

            <dd>
                *****
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" value="Delete" style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
                    <h4 style="font-weight: bold;">Eliminar</h4>
                </button>
                &nbsp;
                <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
                    <h4>@Html.ActionLink("Atras", "Index")</h4>
                </button>
            </div>
        }
    </div>
</div>
<nav class="navbarF">
    <div class="foot">
        &nbsp;&nbsp;<h3 style="padding-left:1rem">&copy; @DateTime.Now.Year - Gestion de inventarios y ventas Pragma</h3>
    </div>
</nav>
