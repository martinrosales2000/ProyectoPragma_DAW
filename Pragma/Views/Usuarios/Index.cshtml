@model IEnumerable<Pragma.Models.Usuario>

@{
    ViewBag.Title = "Index";
}


<div class="navbar">
    <h2 style="display:inline-block; margin-left:0.5rem;">USUARIO</h2>
    <img src="~/img/logo.png" width="50px" height="50px" style="border-radius: 10rem; display: inline-block; float:right; margin-right:0.5rem; margin-top:0.5rem;">
</div>
<div id="contenido">
    @if (@Session["Admin"] == "ok")
    {
        <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
            <h4>
                @Html.ActionLink("Ingresar nuevo usuario", "Create")
            </h4>
        </button>
        <hr />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tipo_usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre_usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.password)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipo_usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre_usuario)
                    </td>
                    <td>
                        *****
                    </td>
                    <td>
                        <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
                            @Html.ActionLink("Editar", "Edit", new { id = item.id_usuario })
                        </button>
                        &nbsp;
                        <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
                            @Html.ActionLink("Detalles", "Details", new { id = item.id_usuario })
                        </button>
                        &nbsp;
                        <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_usuario })
                        </button>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <h1 style="text-align:center;">Usted no puede acceder a esta opción</h1>
        <h1 style="text-align:center;">Esta opcion es exclusiva del administrador</h1>
        <button style="background-color: #c5e0b4; border: solid #517f31; border-radius: 5px; ">
            <h4>@Html.ActionLink("Atras", "Index", "Home")</h4>
        </button>
    }

</div>
<nav class="navbarF">
    <div class="foot">
        &nbsp;&nbsp;<h3 style="padding-left:1rem">&copy; @DateTime.Now.Year - Gestion de inventarios y ventas Pragma</h3>
    </div>
</nav>